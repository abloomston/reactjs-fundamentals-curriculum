root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.*]
charset = utf-8

[*.{json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{package.json,bower.json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,jsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 160

[*.{html}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
